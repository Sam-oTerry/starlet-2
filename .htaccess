# Enable URL rewriting
RewriteEngine On

# Force HTTPS (uncomment when SSL is configured)
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Remove trailing slashes
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)/$ /$1 [L,R=301]

# Remove .html extension
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^([^\.]+)$ $1.html [NC,L]

# Clean URLs for properties
RewriteRule ^properties/?$ pages/properties/index.html [L]
RewriteRule ^properties/([^/]+)/?$ pages/properties/index.html?type=$1 [L]

# Clean URLs for vehicles
RewriteRule ^vehicles/?$ pages/vehicles/index.html [L]
RewriteRule ^vehicles/([^/]+)/?$ pages/vehicles/index.html?type=$1 [L]

# Clean URLs for stores
RewriteRule ^stores/?$ pages/stores/index.html [L]
RewriteRule ^stores/create/?$ pages/stores/create.html [L]

# Clean URLs for auth
RewriteRule ^login/?$ pages/auth/login.html [L]
RewriteRule ^register/?$ pages/auth/register.html [L]

# Clean URLs for about pages
RewriteRule ^about/?$ pages/about/index.html [L]
RewriteRule ^contact/?$ pages/about/contact.html [L]
RewriteRule ^resources/?$ pages/about/resources.html [L]

# Clean URLs for legal pages
RewriteRule ^terms/?$ pages/legal/terms.html [L]
RewriteRule ^privacy/?$ pages/legal/privacy.html [L]

# Clean URLs for user pages
RewriteRule ^saved/?$ pages/user/saved.html [L]
RewriteRule ^notifications/?$ pages/user/notifications.html [L]
RewriteRule ^messaging/?$ pages/user/messaging.html [L]

# Clean URLs for dashboard
RewriteRule ^dashboard/?$ pages/dashboard/index.html [L]
RewriteRule ^dashboard/add-listing/?$ pages/dashboard/listings/add.html [L]
RewriteRule ^dashboard/my-listings/?$ pages/dashboard/listings/my.html [L]

# Security headers
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options DENY
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    Header always set Permissions-Policy "geolocation=(), microphone=(), camera=()"
</IfModule>

# Compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
</IfModule>

# Browser caching
<IfModule mod_expires.c>
    ExpiresActive on
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
</IfModule>

# Error pages
ErrorDocument 404 /404.html
ErrorDocument 500 /500.html 